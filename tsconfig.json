{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["es2018"],

    /* Modules */
    "module": "commonjs",

    /* Emit */
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist/",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
